<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".SubmitApplication">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="410dp"
        android:layout_height="48dp"
        android:background="#9F03A9F4"
        android:fontFamily="sans-serif-black"
        android:text="Submit Application"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <EditText
        android:id="@+id/dateEditText"
        android:layout_width="214dp"
        android:layout_height="41dp"
        android:background="#9CFFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Enter Todays Date:"
        android:inputType="date"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <EditText
        android:id="@+id/yearEditText"
        android:layout_width="214dp"
        android:layout_height="41dp"
        android:background="#9CFFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Year Unit Is Required:"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <EditText
        android:id="@+id/monthEditText"
        android:layout_width="214dp"
        android:layout_height="41dp"
        android:background="#9CFFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Month Unit Is Required"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginBottom="76dp"
        android:background="#03A9F4"
        android:fontFamily="sans-serif"
        android:onClick="submitBtn"
        android:text="Submit Application"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>